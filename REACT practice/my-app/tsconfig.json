{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "allowJs": true,
    "outDir": "./dist", //скомпилированные файлы будут сохраняться в указанной директории
    "moduleResolution": "node",

    "paths": {
      "*": ["types/*"]
    },
  }
}